<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Public API's from every country</h1>
    <p class="lead text-muted">We believe the world can be better if we have data at our disposal.<br>Help us build the largest collection of every country services API's.</p>
    <form action="<%= apis_path %>" method="get" class="form-inline justify-content-center search-form">
      <input type="text" name="query" placeholder="ex. CTT" id="search-input" class="form-control">
      <input type="submit" value="Search" id="search-btn" class="btn btn-primary">
    </form>
  </div>
</section>

<div class="album text-muted">
  <div class="container">
    
    <div class="row">
      <div class="col-md-12">
        <div class="countries">
          <% if !@country %>
            <% @countries.each do |country| %>
              <a href="?country=<%= country.slug %>"><div class="country"><%= country.name %></div></a>
            <% end %>
          <% else %>
            <div class="country"><%= @country.name %></div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="row">
      <% @apis.each do |api| %>
        <div class="col-md-4 api-col">
          <%= render "api_card", api: api %>
        </div>
      <% end %>
    </div>

  </div>
</div>
