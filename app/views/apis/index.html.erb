<section class="jumbotron text-center">
  <div class="container">
    <h1 class="jumbotron-heading">Public API's from every country</h1>
    <p class="lead text-muted">We believe the world can be better if we have data at our disposal. Technology will shape the world to the extent information is available so use it wisely.</p>
    <p>
      Search: <%= params["query"] %>
    </p>
  </div>
</section>

<div class="album text-muted">
  <div class="container">

    <div class="row">
      <% @apis.each do |api| %>
        <div class="col-md-4 api-col">
          <div class="card">
            <h5>
              <a href="<%= api.link %>?utm_source=PapisList" target="_blank"><%= api.name %></a> 
              <% if api.https %><i class="fa fa-lock api-info-icon" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="HTTPS secure"></i><% end %> 
              <% if api.paid %><i class="fa fa-dollar api-info-icon" aria-hidden="true" data-toggle="tooltip" data-placement="top" title="Paid access"></i><% end %>
            </h5>
            <p class="card-text"><%= api.description %></p>
            <div class="country"><%= api.country.name %></div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>
